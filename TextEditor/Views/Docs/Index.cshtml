@model IEnumerable<TextEditor.Models.Doc>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-center align-items-center" style="width: 150px;height 200px;background-color: lightgray; font-size: 100px;">
        <a asp-action="Create" style="text-decoration:none;">+</a>
</div>
<span style="font-weight:bold;">Black Doc</span>
<hr />
<div class="row">
@foreach (var item in Model) {
    <div class="col-2">
    <div class="d-flex justify-content-center align-items-center" style="width: 150px;height 200px;background-color: lightblue; font-size: 100px;">
        <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration:none;">📝</a>
    </div>
    <span style="font-weight:bold;">@item.Title</span>
    </div>
}
</div>